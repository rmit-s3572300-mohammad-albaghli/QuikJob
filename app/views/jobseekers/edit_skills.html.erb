<% provide(:title, "Edit Skills") %>
<h1>Edit your skills</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
     <%= form_for jobseeker_edit_skills_path do |f| %>
     <%= hidden_field_tag :id, @jobseeker.id %>
      <%= f.label "Skills:" %>

       <%= select_tag "skills[]", options_from_collection_for_select(Skill.all, "id", "name") %>
      <%= f.submit "Confirm", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>