<% provide(:title, "Jobseeker Signup") %>
<body class = "jobseeker-body">
  <div class = "outer-container-login">
    <div class = "jobseeker-login-container">
      <h1>Sign up as a Jobseeker!</h1>
      <hr>
      <%= form_for(@jobseeker, url: jobseeker_signup_path) do |f| %>
        <%= render 'shared/jobseeker_error_messages' %>
      
        <%= f.label :name %>
        <%= f.text_field :name %>
  
        <%= f.label :email %>
        <%= f.email_field :email %>
        
        <%= f.label :description %>
        <%= f.text_area :description %>
  
        <%= f.label :password %>
        <%= f.password_field :password %>
  
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>
  
        <%= f.submit "Create my account", class: "btn btn-primary rounded-btn" %>
      <% end %>
    </div>
  </div>
</body>