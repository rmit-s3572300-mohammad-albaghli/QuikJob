<% if logged_in_employer? %>
<h1>Post a New Job</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@job) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :info %>
      <%= f.text_area :info %>
      
      <%= f.label :requirements %>
      <%= f.text_area :requirements %>
      
      <%= f.submit "Post this job!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>  
<% else %>
<div class="center jumbotron">
  <h1>You are not logged in!</h1>
  <h2>
      You are not logged in as an employer. Please log in below or return to the home page. 
  </h2>
    <%= link_to "Login as Employer", login_path(:membertype => "employer"), class: "btn btn-md btn-success signup-button" %>
    <%= link_to "Go To Homepage", root_path, class: "btn btn-md btn-primary signup-button" %>
  </div>
</div>
<% end %> 